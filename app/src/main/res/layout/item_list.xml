<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtDia"
        android:layout_below="@+id/txtHora"
        android:layout_alignLeft="@+id/txtHora"
        android:layout_alignStart="@+id/txtHora"
        android:textColor="#53dbfd" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtID"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#00ffffff" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtTitulo"
        android:layout_marginLeft="33dp"
        android:layout_marginStart="33dp"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/colorAccent"
        style="@style/Widget.AppCompat.TextView.SpinnerItem" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtHora"
        android:layout_below="@+id/txtID"
        android:layout_alignRight="@+id/txtTitulo"
        android:layout_alignEnd="@+id/txtTitulo"
        android:textColor="@color/colorPrimary"
        android:textColorHighlight="#55fbe2"
        android:textColorLink="#40f9ff" />

</RelativeLayout>
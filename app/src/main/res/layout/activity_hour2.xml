<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_hour2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.greye.lampon.HourActivity2">

    <Button
        android:text="CANCELAR"
        android:layout_width="170dp"
        android:layout_height="50dp"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:id="@+id/btnCancelar"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="GUARDAR"
        android:layout_width="170dp"
        android:layout_height="50dp"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:id="@+id/btnGuardar"
        android:layout_alignParentTop="true"/>

    <Button
        android:text="Repetir"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnRepetir"
        android:elevation="0dp"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_below="@+id/tpHora"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/btnGuardar"
        android:layout_alignEnd="@+id/btnGuardar" />

    <Button
        android:text="Aplazar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnAplazar"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_alignBaseline="@+id/btnRepetir"
        android:layout_alignBottom="@+id/btnRepetir"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/btnRepetir"
        android:layout_toEndOf="@+id/btnRepetir" />

    <TimePicker
        android:layout_width="350dp"
        android:layout_height="340dp"
        android:id="@+id/tpHora"
        android:layout_below="@+id/btnCancelar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Nombre de la Alarma"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:id="@+id/txtNombre"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnRepetir" />

</RelativeLayout>

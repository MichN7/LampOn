<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_hour2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.greye.lampon.HourActivity2">




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        <TimePicker
            android:layout_width="350dp"
            android:layout_height="340dp"
            android:id="@+id/tpHora"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Agrega una descripcion "
            android:id="@+id/editText"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp" />

        <TextView
            android:text="Repetir Alarma"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/textView"
            android:layout_marginTop="30dp"
            />

        <GridLayout
            android:id="@+id/seccion_Dias"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <CheckBox
                android:text="Lunes"
                android:layout_width="wrap_content"
                android:layout_column="0"
                android:layout_row="2"
                android:layout_height="wrap_content"
                android:id="@+id/ChBLunes"
                />
            <CheckBox
                android:text="Martes"
                android:layout_width="wrap_content"
                android:layout_column="2"
                android:layout_row="2"
                android:layout_height="wrap_content"
                android:id="@+id/ChBMartes"
                />
            <CheckBox
                android:text="Miercoles"
                android:layout_width="wrap_content"
                android:layout_column="0"
                android:layout_row="3"
                android:layout_height="wrap_content"
                android:id="@+id/ChBMiercoles"
                />
            <CheckBox
                android:text="Jueves"
                android:layout_width="wrap_content"
                android:layout_column="2"
                android:layout_row="3"
                android:layout_height="wrap_content"
                android:id="@+id/ChBJueves"
                />
            <CheckBox
                android:text="Viernes"
                android:layout_width="wrap_content"
                android:layout_column="0"
                android:layout_row="4"
                android:layout_height="wrap_content"
                android:id="@+id/ChBViernes"
                />
            <CheckBox
                android:text="Sabado"
                android:layout_width="wrap_content"
                android:layout_column="2"
                android:layout_row="4"
                android:layout_height="wrap_content"
                android:id="@+id/ChBSabado"
                />
            <CheckBox
                android:text="Domingo"
                android:layout_width="wrap_content"
                android:layout_column="0"
                android:layout_row="5"
                android:layout_height="wrap_content"
                android:id="@+id/ChBDomingo"
                />




        </GridLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <Button
        android:text="GUARDAR"
        android:layout_width="170dp"
        android:layout_height="50dp"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:id="@+id/btnGuardar"
        android:background="@color/com_facebook_button_background_color_pressed" />


        <Button
            android:text="CANCELAR"
            android:layout_width="170dp"
            android:layout_height="50dp"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:id="@+id/btnCancelar"
            android:background="@color/com_facebook_button_background_color_pressed" />

    </LinearLayout>



    </LinearLayout>
    </ScrollView>



</RelativeLayout>
